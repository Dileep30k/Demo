@{
    ViewData["Title"] = "Scorecard";
}

<div class="content-wrapper">
    <div class="content-header pr-0">
        <div class="container">
            <div class="row g-3 intakeRow">
                <div class="col-md-1">
                    <label class="heading">Scheme: </label>
                </div>
                <div class="col-md-3 selectschme headingDropdown schmeDropdown">
                @Html.DropDownList("schemeId", (List<SelectListItem>)ViewBag.Schemes, (new { @class = "form-control select2 dropdownClass", onchange = "getSchemeIntakes(this);" }))
                </div>
                <div class="col-md-3" style="max-width: 130px !important;">
                    <label class="heading">Financial Year : </label>
                </div>
                <div class="col-md-4 selectschme headingDropdown financialDropdown">
                @Html.DropDownList("intakeId", (List<SelectListItem>)ViewBag.Intakes, (new { @class = "form-control select2 dropdownClass", onchange = "getScorecardModel(this);"  }))
                </div>

                <br />
                <br />
                <br />
            </div>
            <div class="display-none" id="optionDiv">
                <div class="row g-3">
                    <div class="col-lg-12 col-md-12 mt-2 mb-3 optionHeading">
                        Please select an option
                    </div>
                </div>
                <div class="row g-3">
                    <div class="col-lg-3 col-md-3 mt-2">
                        <label> <input type="radio" name="scorecard-option" onclick="optionSelected(1)" class="score-option" /> I have my results </label>
                    </div>
                    <div class="col-lg-3 col-md-3 mt-2">
                        <label> <input type="radio" name="scorecard-option" onclick="optionSelected(2)" class="score-option" /> I did not take the exam </label>
                    </div>
                    <div class="col-lg-3 col-md-3 mt-2">
                        <label> <input type="radio" name="scorecard-option" onclick="optionSelected(3)" class="score-option" />I do not wish to proceed further</label>
                    </div>
                </div>
            </div>
            <div class="row g-3">
                <div id="formScorecardDiv" class="col-12 pr-0">
                </div>
            </div>
        </div>
        <div class="content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div id="resultDiv" class="card-body">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="notTakenModal" tabindex="-1" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content p-4">
            <div class="modal-header">
                <h5 class="modal-title headingTitle" style="padding: 0px 32px;">Are you sure you did not take the exam?</h5>
            </div>
            <div class="modal-body text-center">
                <div>
                    <button type="button" class="btn btn-primary darkbtn yesBtn" onclick="notTakenExam()">YES, DID NOT TAKE THE EXAM</button>
                </div>
                <div>
                    <a href="javascript:void(0)" onclick="hideModel('notTakenModal'); clearOptions();" class="btn btn-outline-primary yesBtn  ">NO, I DON'T WANT TO SUBMIT</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="rejectModal" tabindex="-1" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content p-4">
            <div class="modal-header">
                <h5 class="modal-title headingTitle">Are you sure you do not want to proceed with your application?</h5>
            </div>
            <div class="modal-body text-center">
               @* <div>
                    If you choose to reject, you nomination would be rejected.
                </div>*@
                <div>
                    <button type="button" class="btn btn-primary darkbtn yesBtn" onclick="rejectNomination()" style="padding: 7px 33px;">I DO NOT WANT TO PROCEED</button>
                </div>
                <div>
                    <a href="javascript:void(0)" onclick="hideModel('rejectModal'); clearOptions();" class="btn btn-outline-primary yesBtn  ">NO, I WILL UPLOAD MY SCORE CARD</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/empscorecard.js"></script>
}

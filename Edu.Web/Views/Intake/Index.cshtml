@{
    ViewBag.Title = "Intakes";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container">
            <div class="row intakeRow">
                <div class="col-md-1">
                    <label class="heading">Scheme: </label>
                </div>
                <div class="col-md-3 selectschme headingDropdown schmeDropdown">
                    @Html.DropDownList("filterSchemeId", (List<SelectListItem>)ViewBag.Schemes, (new { @class = "form-control select2", onchange = "getSchemeIntakes(this);" }))
                </div>
                <div class="col-md-2" style="max-width: 126px;">
                    <label class="heading">Financial Year: </label>
                </div>
                <div class="col-md-4 selectschme headingDropdown financialDropdown ">

                    @Html.DropDownList("filterIntakeId", (List<SelectListItem>)ViewBag.Intakes, (new { @class = "form-control select2", onchange = "filterTable();" }))
                </div>
                <div class="col pr-1 newIntake ">
                    <a class="btn btn-primary darkbtn float-sm-right" asp-area="" asp-controller="Intake" asp-action="Manage" onclick="showLoading();"><img src="~/assets/img/plus_white.svg" /> &nbsp Create New Intake</a>
                </div>
            </div>
            <div class=" d-flex mb-2 align-items-center">
                <div class="col col-md-12 mt-2 d-flex pl-0 align-items-center pr-0">
                    <div class="col-lg-3 col-md-6 col-12 mb-2 mb-md-0 pl-0 mt-2">
                        <div class="searchBarspanintake d-flex align-items-center pl-2 pr-0 col-11">
                            <img src="~/assets/img/search.svg" />
                            <input class="searchBar searchintake pl-1" type="text" placeholder="Search" id="searchValue" />
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-6 mt-2 inner-addon right-addon ">
                        <img class="calenderIconIndex glyphicon glyphicons-lock" src="~/assets/img/calender_icon_blue.svg" />
                        <input type="text" class="form-control date-picker search-date calenders" placeholder="Start Date" id="startDate" />
                    </div>
                    <div class="col-lg-2 col-md-3 col-6 mt-2 inner-addon right-addon">
                        <img class="calenderIconIndex glyphicon glyphicons-lock" src="~/assets/img/calender_icon_blue.svg" />
                        <input type="text" class="form-control date-picker search-date calenders" placeholder="End Date" id="endDate" />
                    </div>
                    <div class="col-lg-2 col-md-12 col-12 mt-2 intakeBtns">
                        <button id="btn-excel-export" type="button" class="btn btn-outline-primary lightBtn exportBtn"> <img src="~/assets/img/excel.svg" /> Export to Excel</button>&nbsp;
                    </div>
                    <div class="col-lg-3 col-md-6 mt-2 text-right pr-0 intakeBtns ">
                        <button id="btnFilterClear" class="btn btn-secondary clearBtn"> <img src="~/assets/img/reset.svg" /> Reset</button>
                        <button id="btnFilter" class="btn btn-outline-primary lightBtn mr-0">Apply Filters</button>
                    </div>
                </div>
            </div>
            @*<div class=" d-flex mb-2 align-items-center">
                <div class="col-lg-3 col-md-6 mt-2 text-right ">
                    <button id="btnFilterClear" class="btn btn-secondary clearBtn"> <img src="~/assets/img/reset.svg" /> Reset</button>
                    <button id="btnFilter" class="btn btn-outline-primary lightBtn">Apply Filters</button>&nbsp;
                </div>
            </div>*@
        </div>
    </div>
    <div class="content">
        <section class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class=" card-primary">
                        <div class="card-body  p-0">
                            <table id="intakeDatatable" class="table tableDiv datatable table-striped">
                                <thead>
                                    <tr>
                                        <th>Sr. No.</th>
                                        <th>Intake</th>
                                        <th>Intake Start Date</th>
                                        <th>Scheme</th>
                                        <th>Nomination Cut-off Date</th>
                                        <th class="no-sort">Institute ID</th>
                                        <th class="no-sort">No. Of. Seats</th>
                                        <th class="no-sort">Admission Cut-off Date</th>
                                        <th>Exam Date</th>
                                        <th class="no-sort">Documents Required</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/intake.js"></script>
}

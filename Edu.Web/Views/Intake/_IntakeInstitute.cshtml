@using HtmlHelpers.BeginCollectionItemCore;
@model Edu.Abstraction.Models.IntakeInstitute

<div id="institutes-@Model.InstituteId">
    @using (Html.BeginCollectionItem("Institutes"))
    {
        <div class="row">
            <div class="form-group col-4">
                <input asp-for="IntakeInstituteId" type="hidden">
                <input asp-for="IntakeId" type="hidden">
                <input asp-for="InstituteId" type="hidden">
                @Model.InstitueName
            </div>
            <div class="form-group col-4">
                <input maxlength="5" asp-for="TotalSeats" type="text" class="form-control numberOnly">
                <span asp-validation-for="TotalSeats" class="text-danger"></span>
            </div>
            <div class="form-group col-4">
                <input maxlength="50" asp-for="AdmissionCutoffDate" type="text" class="form-control date-picker">
                <span asp-validation-for="AdmissionCutoffDate" class="text-danger"></span>
            </div>
        </div>
    }
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-body">
                <div class="row">
                    <div class="form-group col-11">
                        <label>Add Designation</label>
                        @Html.DropDownList("DesignationId", (List<SelectListItem>)ViewBag.Designations, (new { @class = "form-control select2" }))
                    </div>
                    <div class="form-group col-1 mt-2rem">
                        <input type="button" value="Save" class="btn btn-success" onclick="addDesignation()">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="designation-list">
</div>
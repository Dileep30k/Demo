@inject Edu.Service.Interfaces.IUserProviderService userProviderService

@{
    Layout = userProviderService.UserClaim.UserId == 0 ?
    "~/Views/Shared/_LayoutLogin.cshtml" :
    "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Access Denied";
}

<section class="content-header">
    <div class="container">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Access Denied</h1>
            </div>
            <div class="col-sm-6">
            </div>
        </div>
    </div>
</section>
<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="error-page">
                            <div class="error-content ml-0">
                                <h3><i class="fas fa-exclamation-triangle text-warning"></i> Oops! You dont have an access to page.</h3>
                                <p>
                                    Please contact administrator.
                                    Meanwhile, you may <a asp-controller="Dashboard" asp-action="Index"> return to dashboard</a>.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

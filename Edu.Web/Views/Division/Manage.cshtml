@model Edu.Abstraction.Models.Division

@{
    ViewData["Title"] = (Model.DivisionId > 0) ? $"Edit Division - {Model.DivisionName}" : "Create New Division";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">@(Model.DivisionId > 0 ? $"Edit Division - {Model.DivisionName}" : "Create New Division")</h1>
                </div>
                <div class="col-sm-6">
                    <a class="btn btn-outline-primary float-sm-right" asp-area="" asp-controller="Division" asp-action="Index" onclick="showLoading();">Back</a>
                </div>
            </div>
        </div>
    </div>
    <div class="content">
        <div class="container">

            <form id="divisionForm" enctype="multipart/form-data" class="form-horizontal form-bordered" asp-action="Manage" asp-controller="Division">
                <section class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card card-primary">
                                <div class="card-body">
                                    <input asp-for="DivisionId" type="hidden" id="DivisionId">
                                    <div class="row">
                                        <div class="form-group col-12">
                                            <label for="DivisionName">Division Name<span class="required">*</span></label>
                                            <input maxlength="100" asp-for="DivisionName" type="text" id="DivisionName" class="form-control">
                                            <span asp-validation-for="DivisionName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <a asp-controller="Division" asp-action="Index" class="btn btn-secondary">Cancel</a>
                                <input type="submit" value="Save" class="btn btn-success float-right" onclick="return validateDivision();">
                            </div>
                        </div>
                    </div>
                </section>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/division.js"></script>
}
